<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.project.etsapi.mapper.TeachCourseMapper">

    <!--add-->
    <insert id="addTeachCourse" parameterType="com.project.etsapi.entity.TeachCourse">
        INSERT INTO teachcourse (teacher_ID, course_ID)
        VALUES (#{teacher_ID}, #{course_ID})
    </insert>

<!--    select-->
    <select id="getTeacherById" parameterType="String" resultType="com.project.etsapi.entity.Teacher">
        SELECT * FROM teacher
        WHERE teacher_ID = #{teacher_ID}
    </select>

<!--    select course-->
    <select id="getCourseById" parameterType="String" resultType="com.project.etsapi.entity.Course">
        SELECT * FROM course
        WHERE course_ID = #{course_ID}
    </select>
</mapper>



