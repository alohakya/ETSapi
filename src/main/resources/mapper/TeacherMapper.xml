<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.project.etsapi.mapper.TeacherMapper">
<!--add-->
    <insert id="addTeacher" parameterType="com.project.etsapi.entity.Teacher">
        INSERT INTO teacher (teacher_ID, name)
        VALUES (#{teacher_ID}, #{name})
    </insert>

<!--    delete-->
    <delete id="deleteTeacher" parameterType="String">
        DELETE FROM teacher
        WHERE teacher_ID = #{teacher_ID}
    </delete>

<!--    update-->
    <update id="setTeacher" parameterType="com.project.etsapi.entity.Teacher">
        UPDATE teacher
        <set>
            name = #{name},
        </set>
        WHERE teacher_ID=#{teacher_ID}
    </update>

<!--    select one-->
    <select id="getTeacher" parameterType="String" resultType="com.project.etsapi.entity.Teacher">
        SELECT * FROM teacher
        WHERE teacher_ID = #{teacher_ID}
    </select>

<!--    select all-->
    <select id="getAll" parameterType="com.project.etsapi.entity.Teacher" resultType="com.project.etsapi.entity.Teacher">
        SELECT * FROM teacher
    </select>

</mapper>


